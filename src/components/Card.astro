---
interface Props {
  class?: string;
  "aria-labelledby"?: string;
}

const { class: className, "aria-labelledby": ariaLabelledby } = Astro.props;
---

<article
  class:list={[
    "group gap-4 rounded-xl p-2 shadow-md transition-all duration-1000 hover:duration-300 md:p-4 md:shadow-none hover:md:bg-slate-100 hover:md:shadow-sm hover:md:drop-shadow-sm dark:hover:md:bg-slate-600/5 dark:hover:md:shadow-slate-600",
    className,
  ]}
  aria-labelledby={ariaLabelledby}
>
  <slot />
</article>
