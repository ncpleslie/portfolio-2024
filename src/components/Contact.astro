---
import Icon from "./ui/Icon.astro";
import Card from "./ui/Card.astro";

interface Props {
  email: string;
}

const { email } = Astro.props;
const formTimestamp = Date.now();
---

<Card class="group/contact">
  <div class="flex w-full flex-col items-center justify-center pt-10">
    <p class="heading text-2xl">Contact me</p>
    <div class="flex flex-row gap-1">
      <p>Contact me at</p>
      <a href={`mailto:${email}`} class="font-semibold hover:fancy">{email}</a>
    </div>
    <p>or give me a bell using the form below</p>

    <form
      class="border-border-primary/20 m-8 flex w-full flex-col items-center justify-center gap-8 rounded border-2 p-2 md:p-8"
      id="contact-form"
      action="javascript:void(0)"
      aria-label="Contact form"
    >
      <input type="hidden" name="csrf_token" id="csrf_token" value="" />
      <input type="hidden" name="form_timestamp" value={formTimestamp} />
      <input
        type="text"
        name="website"
        id="website"
        tabindex="-1"
        autocomplete="off"
        style="position: absolute; left: -9999px; width: 1px; height: 1px;"
        aria-hidden="true"
      />
      <div class="relative w-full">
        <input
          id="name"
          name="name"
          type="text"
          class="border-border-primary text-text-primary ring-text-primary bg-bg-secondary peer mx-0 my-4 w-full rounded border-0 border-b-2 p-4 placeholder-transparent focus:shadow-lg focus:ring-1"
          placeholder="John Doe"
          required
        />
        <label
          for="name"
          class="text-text-secondary peer-placeholder-shown:text-text-secondary peer-focus:text-text-tertiary absolute -top-2.5 left-2 text-xl transition-all peer-placeholder-shown:top-7 peer-placeholder-shown:text-xl peer-focus:-top-3.5 peer-focus:text-sm"
          >Name</label
        >
      </div>

      <div class="relative w-full">
        <input
          id="email"
          name="email"
          type="email"
          class="border-border-primary text-text-primary ring-text-primary bg-bg-secondary peer mx-0 my-4 w-full rounded border-0 border-b-2 p-4 placeholder-transparent focus:shadow-lg focus:ring-1"
          placeholder="john@doe.com"
          required
        />
        <label
          for="email"
          class="text-text-secondary peer-placeholder-shown:text-text-secondary peer-focus:text-text-tertiary absolute -top-2.5 left-2 text-xl transition-all peer-placeholder-shown:top-7 peer-placeholder-shown:text-xl peer-focus:-top-3.5 peer-focus:text-sm"
          >Email</label
        >
      </div>

      <div class="relative w-full">
        <textarea
          id="message"
          name="message"
          class="border-border-primary text-text-primary bg-bg-secondary peer mx-0 my-4 w-full rounded border-0 border-b-2 p-4 placeholder-transparent focus:shadow-lg"
          placeholder=" "
          required></textarea>
        <label
          for="message"
          class="text-text-secondary peer-placeholder-shown:text-text-secondary peer-focus:text-text-tertiary absolute -top-2.5 left-2 text-xl transition-all peer-placeholder-shown:top-7 peer-placeholder-shown:text-xl peer-focus:-top-3.5 peer-focus:text-sm"
          >Your Message</label
        >
      </div>

      <div
        id="error-msg"
        role="alert"
        aria-live="assertive"
        tabindex="-1"
        class="hidden w-full flex-col justify-center gap-2 rounded border-2 border-red-600 p-4 text-center"
      >
        <p class="w-full text-center text-xl font-medium">Oops!</p>
        <p class="w-full text-center text-sm">
          Ensure all fields have the correct value and try again
        </p>
      </div>

      <button
        id="submit"
        type="submit"
        aria-label="Send message"
        class="group/btn hover:bg-bg-hover group-hover:bg-bg-hover flex h-fit w-full flex-grow items-center justify-center gap-4 rounded-xl p-2 text-xl shadow-md transition-all hover:scale-105 hover:shadow-xl active:scale-90"
        >Send
        <Icon
          id="send-icon"
          name="iconamoon:send-fill"
          size={24}
          class="group-hover/btn:animate-pulse"
          decorative={true}
        />
      </button>
    </form>

    <div
      id="success-msg"
      role="status"
      aria-live="polite"
      tabindex="-1"
      class="border-border-primary/20 m-8 hidden w-full flex-col justify-center gap-8 rounded border-2 p-8 text-center"
    >
      <p class="w-full text-center text-3xl font-medium">
        Thanks for contacting me!
      </p>
      <p>I'll get back to you as soon as possible</p>

      <button
        id="send-another"
        class="group/btn hover:bg-bg-primary group-hover:bg-bg-primary flex h-fit flex-grow items-center justify-center gap-4 rounded-xl p-2 text-xl shadow-md transition-all hover:scale-105 hover:shadow-xl active:scale-90"
      >
        Want to send me another message?
      </button>
    </div>
  </div>
</Card>

<script>
  const contactForm = document.getElementById(
    "contact-form",
  ) as HTMLFormElement;
  const contactFormBtn = document.getElementById("submit") as HTMLButtonElement;
  const successMsg = document.getElementById("success-msg") as HTMLElement;
  const sendAnotherBtn = document.getElementById(
    "send-another",
  ) as HTMLButtonElement;
  const errorMsg = document.getElementById("error-msg") as HTMLElement;
  const sendIcon = document.getElementById("send-icon") as HTMLElement;
  const csrfInput = document.getElementById("csrf_token") as HTMLInputElement;

  async function fetchCSRFToken(): Promise<void> {
    try {
      const response = await fetch("/api/csrf");
      if (response.ok) {
        const data = await response.json();
        csrfInput.value = data.token;
      }
    } catch (error) {
      console.error("Failed to fetch CSRF token:", error);
    }
  }

  fetchCSRFToken();

  /**
   * Show the error message and enable the contact form button.
   */
  function showErrorMsg(): void {
    toggleVisibility(errorMsg, true);
    contactFormBtn.disabled = false;
    contactFormBtn.removeAttribute("aria-busy");
    contactFormBtn.innerHTML = "Send" + (sendIcon?.outerHTML || "");
    // Move focus to error message for screen readers
    errorMsg.focus();
  }

  /**
   * Toggle the visibility of a given HTML element.
   * @param {HTMLElement | null} element - The HTML element to toggle visibility of.
   * @param {boolean} isVisible - Whether the element should be visible.
   */
  function toggleVisibility(
    element: HTMLElement | null,
    isVisible: boolean,
  ): void {
    if (element) {
      element.classList.toggle("hidden", !isVisible);
      element.classList.toggle("flex", isVisible);
    }
  }

  /**
   * Handle the form submission event.
   * @param {SubmitEvent} e - The form submission event.
   * @returns {Promise<void>}
   */
  async function submit(e: SubmitEvent): Promise<void> {
    e.preventDefault();
    toggleVisibility(errorMsg, false);

    const formData = new FormData(contactForm);
    // Disable all form inputs during submission (except hidden fields)
    const formInputs = contactForm.querySelectorAll(
      "input:not([type='hidden']), textarea, button",
    );
    formInputs.forEach(
      (input) =>
        ((
          input as HTMLInputElement | HTMLTextAreaElement | HTMLButtonElement
        ).disabled = true),
    );

    contactFormBtn.setAttribute("aria-busy", "true");
    contactFormBtn.innerText = "Sending...";

    try {
      const response = await fetch("/api/contact", {
        method: "POST",
        body: formData,
      });

      if (response.status !== 200) {
        formInputs.forEach(
          (input) =>
            ((
              input as
                | HTMLInputElement
                | HTMLTextAreaElement
                | HTMLButtonElement
            ).disabled = false),
        );
        showErrorMsg();
        return;
      }

      contactForm.reset();
      toggleVisibility(contactForm, false);
      toggleVisibility(successMsg, true);
      contactFormBtn.removeAttribute("aria-busy");
      formInputs.forEach(
        (input) =>
          ((
            input as HTMLInputElement | HTMLTextAreaElement | HTMLButtonElement
          ).disabled = false),
      );
      contactFormBtn.innerHTML = "Send" + (sendIcon?.outerHTML || "");
      successMsg.focus();
    } catch (error) {
      console.error("Error:", error);
      formInputs.forEach(
        (input) =>
          ((
            input as HTMLInputElement | HTMLTextAreaElement | HTMLButtonElement
          ).disabled = false),
      );
      showErrorMsg();
    }
  }

  sendAnotherBtn?.addEventListener("click", () => {
    toggleVisibility(contactForm, true);
    toggleVisibility(successMsg, false);
    fetchCSRFToken();
  });

  contactForm?.addEventListener("submit", submit);
</script>
