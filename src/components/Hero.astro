---
import type { Details } from "../hooks/useContent.hook";
import SocialsBar from "./SocialsBar.astro";

interface Props {
  class?: string;
  details: Details;
}

const { class: className, details } = Astro.props;
---

<header
  class:list={[
    "flex h-full flex-col items-center gap-8 lg:items-start",
    className,
  ]}
>
  <div class="flex max-w-[35rem] flex-col justify-center gap-2 text-center">
    <a aria-label="Return to homepage" href="/">
      <h1 class="fancy font-heading text-7xl hover:fancy">
        {details.fullName}
      </h1>
    </a>
    <h2 class="font-sub-heading">{details.title}</h2>
    <p class="w-full">{details.pitch}</p>
  </div>
  <slot />
  <SocialsBar class="justify-center" socials={details.socials} />
</header>
