---
import IconLink from "./IconLink.astro";
---

<div class="m-4 flex flex-col gap-1">
  <div class="flex gap-1">
    <p>Made by me with</p>
    <IconLink
      external
      icon="devicon:astro"
      href="https://astro.build"
      title="Astro"
    />
    <p>and</p>
    <IconLink
      external
      icon="devicon:tailwindcss"
      href="https://tailwindcss.com/"
      title="Tailwindcss"
    />
  </div>
  <div class="flex gap-1">
    <p>Deployed to</p>
    <IconLink
      external
      icon="devicon:vercel"
      href="https://vercel.com"
      title="Vercel"
    />
  </div>
  <a
    class="font-bold hover:fancy"
    target="_blank"
    rel="noopener noreferrer"
    href="https://github.com/ncpleslie/portfolio-2024"
    >Source code available here</a
  >
</div>
