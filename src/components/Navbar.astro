---
import { Icon } from "astro-icon";

type Link = {
  link: string;
  title: string;
  icon: string;
  alt: string;
};

interface Props {
  links: Link[];
}

const { links } = Astro.props;
---

<div class="flex h-screen flex-row items-start justify-center gap-16">
  {
    links.map((link) => (
      <a
        title={link.alt}
        class="flex flex-col items-center justify-center gap-0 rounded-xl text-xl text-transparent transition-all duration-200 hover:px-8 hover:pb-4 hover:pt-8 hover:indent-0 hover:text-black"
        href={link.link}
      >
        {link.title} <Icon class="h-10 w-10 text-black" name={link.icon} />
      </a>
    ))
  }
</div>
