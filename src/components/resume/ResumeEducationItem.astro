---
interface Props {
  degree: string;
  institution: string;
  major: string;
  achievement: string;
}

const { degree, institution, major, achievement } = Astro.props;
---

<div class="mb-2 flex flex-row justify-between print:mb-1">
  <div class="mb-0.5 flex items-start justify-between print:mb-0">
    <div class="flex-1">
      <h3 class="text-sm font-bold print:text-xs">{degree}</h3>
      <p class="text-text-secondary text-xs italic print:text-[10px]">
        {institution}
      </p>
    </div>
  </div>
  <div class="flex flex-col gap-0">
    <p class="text-text-secondary text-xs print:text-[10px]">
      {major}
    </p>
    <p class="text-text-secondary text-xs italic print:text-[10px]">
      {achievement}
    </p>
  </div>
</div>
