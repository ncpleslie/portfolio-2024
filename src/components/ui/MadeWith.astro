---
import IconLink from "./IconLink.astro";
---

<section aria-label="Site credits">
  <div class="m-4 flex flex-col gap-1">
    <div class="flex gap-1">
      <p>Made by me with</p>
      <IconLink
        external
        icon="devicon:astro"
        href="https://astro.build"
        title="Astro"
        aria-label="Built with Astro framework"
      />
      <p>and</p>
      <IconLink
        external
        icon="devicon:tailwindcss"
        href="https://tailwindcss.com/"
        title="Tailwindcss"
        aria-label="Styled with Tailwind CSS"
      />
    </div>
    <a
      class="font-bold hover:fancy"
      target="_blank"
      rel="noopener noreferrer"
      href="https://github.com/ncpleslie/portfolio-2024"
      aria-label="View portfolio source code on GitHub"
      >View source code on GitHub</a
    >
  </div>
</section>
