---
import Layout from "../layout/Layout.astro";
import { Icon } from "astro-iconify";
import useContent from "../hooks/useContent.hook";

const { getDetails } = useContent();
const { fullName } = getDetails();

export const prerender = true;
---

<Layout title={"Not Found"}>
  <div
    class="flex min-h-screen flex-col items-center justify-center gap-8 text-center"
  >
    <h1 class="text-9xl font-bold">404</h1>
    <h2 class="text-3xl font-semibold">Page Not Found</h2>
    <p class="max-w-md text-xl">
      Sorry, the page you're looking for doesn't exist or has been moved.
    </p>
    <div class="flex flex-col gap-4 sm:flex-row">
      <a
        href="/"
        class="flex items-center gap-2 rounded-xl px-6 py-3 shadow-md transition-all hover:scale-105 hover:bg-white hover:shadow-xl active:scale-90 dark:shadow-slate-700 dark:hover:!bg-slate-800 dark:hover:shadow-slate-800"
      >
        <Icon name="heroicons-outline:home" size={24} />
         Go Home
      </a>
      <a
        href="/projects"
        class="flex items-center gap-2 rounded-xl px-6 py-3 shadow-md transition-all hover:scale-105 hover:bg-white hover:shadow-xl active:scale-90 dark:shadow-slate-700 dark:hover:!bg-slate-800 dark:hover:shadow-slate-800"
      >
        <Icon name="heroicons-outline:code-bracket" size={24} />
         View Projects
      </a>
    </div>
  </div>
</Layout>
