---
import Layout from "../layout/Layout.astro";
import Hero from "../components/Hero.astro";
import Navbar from "../components/Navbar.astro";
import Projects from "../components/Projects.astro";

const navbarLinks = [
  {
    title: "Projects",
    link: "#projects",
    icon: "mdi:card-bulleted-settings",
    alt: "See Nick's projects",
  },
  {
    title: "Résumé",
    link: "#resume",
    icon: "mdi:resume",
    alt: "Check out Nick's Résumé",
  },
  {
    title: "Contact",
    link: "#contact",
    icon: "mdi:email",
    alt: "Contact Nick",
  },
  // {
  //   title: "LinkedIn",
  //   link: "https://linkedin.com",
  //   icon: "mdi:linkedin",
  //   alt: "Navigate to Nick's LinkedIn",
  // },
];
---

<Layout title={"Nick Leslie - Portfolio"}>
  <div class="mt-32 grid grid-cols-2">
    <Hero class="grid-span-1 fixed col-start-1">
      <Navbar links={navbarLinks} />
    </Hero>
    <div class="grid-span-1 col-start-2">
      <div class="ml-8 flex flex-col justify-center" id="projects">
        <Projects />
      </div>
    </div>
    <div class="h-screen" id="resume">Résumé</div>
    <div class="h-screen" id="contact">Contact me</div>
  </div>
</Layout>
